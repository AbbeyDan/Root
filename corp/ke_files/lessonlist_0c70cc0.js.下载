var JKscroll,$j=$=jQuery.noConflict(),lessonlist={switching:!0,init:function(){this.bindEle(),this.changeStyle(),$j().tooltip("imgmove",{oneEle:".imgbox li",oneWidth:220,boxWidth:640,prev:".prev-img",next:".next-img",loop:!0});var s=JKXY.Cookie.get("tag");if(lessonlist.switching===!1&&(s="lesson-list"),"lesson-list2"!=s){$(".laddingicon-box").remove(),$j(".noshow").show(),$(".zhongji").hide(),$j(".learn-number").hide(),JK_lock="open",$j("#changeid").removeClass("lesson-list2").addClass("lesson-list"),$j(".kuai-icon").addClass("curr"),$j(".list-icon").removeClass("curr");var o=$j(".lesson-list p");o.height(0),$j(".lesson-list li").hover(lessonlist.lessonHover,lessonlist.lessonOut)}else if("lesson-list2"==s){JK_lock="close";var o=$j(".lesson-list p");$(".noshow").show(),$(".learn-number").show(),$(".zhongji").show(),o.height(36),$j("#changeid").removeClass("lesson-list").addClass("lesson-list2"),$(".laddingicon-box").remove(),$j(".kuai-icon").removeClass("curr"),$j(".list-icon").addClass("curr")}},bindEle:function(){},changeStyle:function(){$j(".kuai-icon").unbind(),$j(".kuai-icon").bind("click",function(){JKXY.Cookie.set("tag","lesson-list",1,"/");JKXY.Cookie.get("tag");$(".zhongji").hide(),$j(".learn-number").hide(),$(".zhongji").hide(),JK_lock="open",$j("#changeid").removeClass("lesson-list2").addClass("lesson-list"),$j(".list-icon").removeClass("curr"),$j(this).addClass("curr");var s=$j(".lesson-list p");s.height(0),s.hide(),$j(".lesson-list li").hover(lessonlist.lessonHover,lessonlist.lessonOut)}),$j(".list-icon").unbind(),$j(".list-icon").bind("click",function(){JKXY.Cookie.set("tag","lesson-list2",1,"/");JKXY.Cookie.get("tag");JK_lock="close";var s=$j(".lesson-list p");s.show(),$(".learn-number").show(),$(".zhongji").show(),s.height(36),$j("#changeid").removeClass("lesson-list").addClass("lesson-list2"),$j(".kuai-icon").removeClass("curr"),$j(this).addClass("curr")})},leftNavFlex:function(){null==JKscroll&&(JKscroll=60),$j(document).scroll(function(){var s=$j(d